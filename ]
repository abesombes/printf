#include "../ft_printf.h"

int main(void)
{
	printf("\n------------------------------------");
	printf("\n-------------  TEST 1  -------------");
	printf("\n------------------------------------");
	printf("\n [%*.s] [%.1s] \n", 10, "123", "4567");
	ft_printf(" [%*.s] [%.1s] ", 10, "123", "4567");
	printf("\n------------------------------------");
	printf("\n-------------  TEST 2  -------------");
	printf("\n------------------------------------");
	printf("\n [%*.0s] [%.2s] \n", 10, "123", "4567");
	ft_printf(" [%*.0s] [%.2s] ", 10, "123", "4567");


}
